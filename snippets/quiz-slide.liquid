{% case type %}
    {% when 'text' %}
        <div class="quiz-text">
            <h2>{{ title }}</h2>
            <p>{{ text }}</p>
            <a href="{{ cta.link }}">{{ cta.text }}</a>
        </div>
    {% when 'input' %}
        <div class="quiz-input">
            <h2>{{ title }}</h2>
            <input type="text" placeholder="{{ placeholder }}">
            <input type="email" placeholder="{{ email }}">
            <span>{{ tooltip }}</span>
        </div>
    {% when 'radio' %}
        <div class="quiz-radio">
            <h2>{{ title }}</h2>
            {% for option in options %}
                <input type="radio" id="{{ option.id }}" name="{{ option.name }}">
                <label for="{{ option.id }}">{{ option.text }}</label>
            {% endfor %}
        </div>
    {% when 'dropdown' %}
        <div class="quiz-dropdown">
            <h2>{{ title }}</h2>
            <select>
                {% for option in options %}
                    <option value="{{ option.value }}">{{ option.text }}</option>
                {% endfor %}
            </select>
            <img src="{{ image.src | asset_url }}" alt="{{ image.alt }}" width="200" height="200">
            <p>{{ text }}</p>
        </div>
    {% when 'date' %}
        <div class="quiz-date">
            <h2>{{ title }}</h2>
            <select>
                {% for m in month %}
                    <option value="{{ m.value }}">{{ m.text }}</option>
                {% endfor %}
            </select>
            <select>
                {% for y in year %}
                    <option value="{{ y.value }}">{{ y.text }}</option>
                {% endfor %}
            </select>
        </div>
    {% when 'weight' %}
        <div class="quiz-weight">
            <h2>{{ title }}</h2>
            <input type="number" placeholder="{{ weight }}">
            <img src="{{ image.src | asset_url }}" alt="{{ image.alt }}" width="200" height="200">
            <p>{{ text }}</p>
        </div>
    {% when 'lifestyle' %}
        <div class="quiz-lifestyle">
            <h2>{{ title }}</h2>
            {% for option in options %}
                <input type="radio" id="{{ option.id }}" name="{{ option.name }}">
                <label for="{{ option.id }}">{{ option.text }}</label>
            {% endfor %}
        </div>
    {% when 'food' %}
        <div class="quiz-food">
            <h2>{{ title }}</h2>
            {% for option in options %}
                <input type="radio" id="{{ option.id }}" name="{{ option.name }}">
                <label for="{{ option.id }}">{{ option.text }}</label>
            {% endfor %}
        </div>
{% endcase %}